#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  exec "$basedir/node" --experimental-vm-modules --experimental-import-meta-resolve --trace-warnings "$basedir/../yest/modules/cli.js" "$@"
else 
  exec node --experimental-vm-modules --experimental-import-meta-resolve --trace-warnings "$basedir/../yest/modules/cli.js" "$@"
fi
